{
  "compilerOptions": {
    "module": "ESNext",
    "lib": ["ESNext"],
    "target": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": "./",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "types": ["@types/screeps", "@types/lodash"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
